<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css" />
        <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>
        <title><%= locals.headTitle.pageName %><%= locals.headTitle.remainder %></title>
    </head>
    <body>
        <div class="navbar" href="/">
            <a href="/">
                <h1>NextTrack</h1>
                <h2>Recommendations Page</h2>
            </a>
        </div>

        <div class="submitted-track-details">
            <h3>Track's Details</h3>
            <ul>
                <li>Name: <%= spotify_trackDetails.name %></li>
                <li>
                    Artist(s): <% spotify_trackDetails.artists.forEach((artist, index) => { %>
                    <!-- Format -->
                    <% let comma_space = index == spotify_trackDetails.artists.length - 1 ? "" : ", " %>
                    <!-- Format -->
                    <%= artist.name %><%= comma_space %>
                    <!-- Format -->
                    <% }) %>
                </li>
                <li>Release Date (YYYY-MM-DD): <%= spotify_trackDetails.album.release_date %></li>
            </ul>
        </div>

        <div class="customise-recommendations">
            <h3>Customise Your Recommendations</h3>
            <p>How similar do you want your recommendations to be?</p>
            <div class="genre-tags">
                <h4>Genres / Tags</h4>
                <ul>
                    <% lastFm_genreTags.forEach((genreTag) => { %>
                    <!-- Format -->
                    <li><%= genreTag.name %></li>
                    <!-- Format -->
                    <% }) %>
                </ul>

                <!-- TODO: Double-click to reset slider's value -->

                <div class="similarity-slider">
                    <label for="similaritySlider" class="form-label">
                        <!-- Format -->
                        Similarity: <span id="similaritySliderValue">50</span>%
                    </label>
                    <input name="similaritySlider" id="similaritySlider" type="range" class="form-range" min="0" max="100" step="1" value="50" />
                </div>

                <div class="popularity-slider">
                    <label for="popularitySlider" class="form-label">
                        <!-- Format -->
                        Popularity: <span id="popularitySliderValue"><%= spotify_trackDetails.popularity %></span> / 100
                    </label>
                    <input name="popularitySlider" id="popularitySlider" type="range" class="form-range" min="0" max="100" step="1" value="<%= spotify_trackDetails.popularity %>" />
                </div>
            </div>
        </div>

        <div class="recommended-tracks">
            <h3>Recommended Tracks</h3>

            <!-- TODO: End-goal is to apply this part for each and every recommended track via a loop -->
            <!-- For now, just focus on getting 1 (fake) "recommended track" to work -->

            <p>Title: abc</p>
            <p>Artist: def</p>
            <p>
                Listen at:
                <button>Spotify</button>
                <button>Apple Music</button>
                <button>YouTube Music</button>
            </p>
            <p>
                Music Video:
                <br />*music video (either straight from YouTube, or the linked/embedded video on Last.fm's / Genius' page)*
            </p>
            <p>
                Lyrics:
                <br />*lyrics from Genius*
            </p>
            <p>
                "About" / Wiki Section:
                <br />*"about" section from Last.fm or Genius*
            </p>
        </div>

        <script>
            let similaritySlider = document.getElementById("similaritySlider");
            let similaritySliderValue = document.getElementById("similaritySliderValue");
            similaritySlider.addEventListener("input", () => {
                similaritySliderValue.textContent = similaritySlider.value;
            });
            let popularitySlider = document.getElementById("popularitySlider");
            let popularitySliderValue = document.getElementById("popularitySliderValue");
            popularitySlider.addEventListener("input", () => {
                popularitySliderValue.textContent = popularitySlider.value;
            });
        </script>
    </body>
</html>
